<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with light gray color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E9E9E9" /> <!-- Light gray fill color -->
            <corners android:radius="20dp" /> <!-- Corner radius (20dp for rounded corners) -->
        </shape>
    </item>
    <!-- Border for the rounded rectangle -->
    <item android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>